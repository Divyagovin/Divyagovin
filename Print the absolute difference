list1=[]
list2=[]
n1=int(input("enter a no of elements:")) 
b=0
for i in range(n1):
  n2=int(input("enter number one by one")) 
  list1.append(n2) 
print("the list is",list1) 
list1.sort()
print("the rearrange list is", list1) 
for j in range(1,n1):
   diff=abs(list1[j-1]-list1[j]) 
   list2.append(diff) 
print("the  difference is",list2) 
for k in list2:
  b=b+k
print("the sum of the absolute difference is", b)
